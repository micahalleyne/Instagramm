#pic_show.row
    .col-md-6.col-md-offset-3
        .panel.panel-default
            .panel.heading.pic_image
                = image_tag @pic.image.url
            .panel-body
                %h1= @pic.title
                %p= @pic.description

            .panel-footer
                .row
                    .col-md-6
                        %p.user
                            by
                            = @pic.user.email
                    .col-md-6
                        .btn-group.pull-right
                            = link_to like_pic_path(@pic), method: :put, class: "btn btn-default" do
                                %svg.bi.bi-heart{:fill => "currentColor", :height => "1em", :viewbox => "0 0 20 20", :width => "1em", :xmlns => "http://www.w3.org/2000/svg"}
                                    %path{"clip-rule" => "evenodd", :d => "M10 4.748l-.717-.737C7.6 2.281 4.514 2.878 3.4 5.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.837-3.362.314-4.385-1.114-2.175-4.2-2.773-5.883-1.043L10 4.748zM10 17C-5.333 6.868 5.279-1.04 9.824 3.143c.06.055.119.112.176.171a3.12 3.12 0 01.176-.17C14.72-1.042 25.333 6.867 10 17z", "fill-rule" => "evenodd"}

                            = @pic.get_upvotes.size

                            - if user_signed_in?
                                = link_to "Fix Pic", edit_pic_path, class: "btn btn-info"
                                = link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-danger"